<Window x:Class="Process_Scheduling_Simulator.View.License"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Process_Scheduling_Simulator.View"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:fa="http://schemas.fontawesome.com/icons/fonts"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="License" Height="575" Width="875"
        Loaded="LoadedHandler">
    <Border Background="#fafcfc" CornerRadius="15" Margin="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="125"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="/Resources/#Pretendard Variable" FontWeight="Medium" FontSize="14">
                    Credits
                </TextBlock>

                <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0">
                    <Button Margin="5,0" Width="20" Height="20" BorderBrush="Transparent" hc:BorderElement.Circular="True" hc:BorderElement.CornerRadius="10" Background="#fc3a3a" Click="AppCloseClickedEventHandler"/>
                </StackPanel>
                <Border MouseDown="Topbar_MouseDown" Margin="50,0" Background="Transparent"/>
            </Grid>

            <!--About Us-->
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Image Source="/Resources/logo.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant"/>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="22" Margin="5,0">
                        Process Scheduling Simulator<LineBreak/>
                        <Run FontSize="18" FontWeight="Medium">오!운영 상담소</Run><LineBreak/>
                        <Run FontSize="16" FontWeight="Regular">제세형 김재인 임효준 장교은</Run><LineBreak/>
                        <Run FontSize="14" FontWeight="Regular">Process Scheduling Simulator의 일부는 오픈소스 라이브러리를 사용하여 제작되었습니다.</Run>
                    </TextBlock>
                </StackPanel>
                
            </Grid>
            
